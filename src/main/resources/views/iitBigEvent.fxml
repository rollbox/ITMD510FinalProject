<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iit.controllers.IitCallController">
    <children>
        <HBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="60">
            <children>
                <TextField fx:id="keywordsField" prefHeight="25.0" prefWidth="180.0" promptText="EVENT'S ID OR NAME" />
                <Button onAction="#search" styleClass="green-theme" text="SEARCH" />
            </children>
        </HBox>
        <TableView fx:id="bigCustEventTable" maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="1000" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="130.0">
            <placeholder>
                <Label text=""/>
            </placeholder>
            <columns>
                <TableColumn text="EVENT NAME">
                    <cellValueFactory>
                        <PropertyValueFactory property="eventName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="PRODUCT NAME">
                    <cellValueFactory>
                        <PropertyValueFactory property="productName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="SALESMANSHIP">
                    <cellValueFactory>
                        <PropertyValueFactory property="salesmanship" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <TableView fx:id="bigCustInfoTable" layoutX="100.0" layoutY="100.0" prefWidth="1000" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="220.0">
            <placeholder>
                <Label text=""/>
            </placeholder>
        <columns>
                <TableColumn text="NAME">
                    <cellValueFactory>
                        <PropertyValueFactory property="name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="SEX">
                    <cellValueFactory>
                        <PropertyValueFactory property="sex" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="PHONE NUMBER">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="PRODUCTS">
                    <cellValueFactory>
                        <PropertyValueFactory property="products" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="ADDRESS">
                    <cellValueFactory>
                        <PropertyValueFactory property="address" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Label layoutX="21.0" layoutY="101.0" prefHeight="24.0" prefWidth="396.0" text="INFORMATION OF MARKETING EVENTS">
            <font>
                <Font name="Microsoft YaHei Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="14.0" layoutY="191.0" text="THE CUSTOMERS OF MARKETING EVENTS">
            <font>
                <Font name="Microsoft YaHei Bold" size="18.0" />
            </font>
        </Label>
    </children>

</AnchorPane>
