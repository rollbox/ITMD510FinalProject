<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iit.controllers.IitPersonalController">
    <VBox spacing="20" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="20">
      <HBox spacing="30">
         <children>
            <Label styleClass="font-title" text="AccountType:" />
            <Label fx:id="adminType" styleClass="font-title" text="AccountType" />
         </children>
      </HBox>
      <HBox spacing="30">
         <children>
            <Label styleClass="font-title" text="AccountName:" />
              <Label fx:id="adminName" styleClass="font-title" text="Account Name" />
         </children>
      </HBox>
      <HBox spacing="30">
         <children>
            <Label styleClass="font-title" text="New Password:" />
              <PasswordField fx:id="adminPassword" editable="false" text="passwd" />
         </children>
      </HBox>
        <HBox spacing="30">
            <Button onAction="#save" styleClass="green-theme" text="Change Password" />
        </HBox>
    </VBox>
</AnchorPane>
